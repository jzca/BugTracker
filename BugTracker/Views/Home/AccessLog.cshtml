@model List<ActionLogViewModel>
@{
    ViewBag.Title = "Access Log";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no logs</strong></p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>Action Name</th>
                    <th>Controller Name</th>
                    <th>Access Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.ActionName</td>
                        <td>@record.ControllerName</td>
                        <td>@record.AccessTime</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
