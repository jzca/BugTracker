@model List<IndexDevAssignedTicketViewModel>
@{
    ViewBag.Title = "Tickets assigned to me";
}

<h2>@ViewBag.Title</h2>


@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no assigned tickets</strong></p>
    </div>
}
else
{
    <table class="table table-striped table-auto-sort">
        <thead>
            <tr>
                <th>Ticket title</th>
                <th>Project name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Title</td>
                    <td>@record.ProjectName</td>
                    <td>@record.TicketType</td>
                    <td>@record.TicketStatus</td>
                    <td>@record.TicketPriority</td>
                    <td>@record.DateCreated</td>
                    <td>@record.DateUpdated</td>
                    <td>
                        <a href="@Url.Action("Edit", "Ticket", new { id = record.Id })">
                            <i class="fas fa-fw fa-wrench"></i>
                        </a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}

