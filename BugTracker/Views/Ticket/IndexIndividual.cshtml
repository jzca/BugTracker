@model List<IndexTicketViewModel>
@{
    ViewBag.Title = "My Tickets";
}

<h2>@ViewBag.Title</h2>

@section scripts  {
    <script src="~/resources/js/auto-table.js"></script>
}

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>You have no tickets</strong></p>
    </div>
}
else
{
    <table class="table table-striped table-auto-sort">
        <thead>
            <tr>
                <th>Ticket title</th>
                <th>Project name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Assigned deveopler</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Title</td>
                    <td>@record.ProjectName</td>
                    <td>@record.TicketType</td>
                    <td>@record.TicketStatus</td>
                    <td>@record.TicketPriority</td>
                    <td>@record.AssignedDev</td>
                    <td>@record.DateCreated</td>
                    <td>@record.DateUpdated</td>
                    <td>
                        <a href="@Url.Action("Edit", "Ticket", new { id = record.Id })">Edit</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}


