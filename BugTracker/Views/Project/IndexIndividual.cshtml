@model  List<IndexProjectViewModel>
@{
    ViewBag.Title = "My Projects";
}

<h2>@ViewBag.Title</h2>

@section scripts  {
<script src="~/resources/js/auto-table.js"></script>
}

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>You have no projects</strong></p>
    </div>
}
else
{
    <table class="table table-striped table-auto-sort">
        <thead>
            <tr>
                <th>Project name</th>
                <th>Date Created</th>
                <th>Date Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Name</td>
                    <td>@record.DateCreated</td>
                    <td>@record.DateUpdated</td>
                </tr>
            }

        </tbody>
    </table>
}


