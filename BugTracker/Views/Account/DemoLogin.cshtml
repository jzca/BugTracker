@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@model DemoLoginViewModel
@{
    ViewBag.Title = "Demo Login";
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body indenpent">
            <h2>@ViewBag.Title.</h2>
            <div class="row">
                <div class="col-md-8">
                    <section id="loginForm">
                        @using (Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Choose the one you want</h4>
                            <hr />
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" name="TheChoice" value="Admin" class="btn btn-outline-primary" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" name="TheChoice" value="Project Manager" con class="btn btn-outline-primary" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" name="TheChoice" value="Developer" class="btn btn-outline-primary" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" name="TheChoice" value="Submitter" class="btn btn-outline-primary" />
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("Go Back To Login Page", "Login")
                            </p>
                        }
                    </section>
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


